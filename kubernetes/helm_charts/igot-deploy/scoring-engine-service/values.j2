### Default variable file for scoring_engine-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{scoring_engine_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{scoring_engine_replicacount|default(1)}}
repository: {{ image_scoring_engine_service }}
image_tag: {{image_tag}}
resources:
  requests:
    cpu: {{scoring_engine_cpu_req|default('100m')}}
    memory: {{scoring_engine_mem_req|default('100Mi')}}
  limits:
    cpu: {{scoring_engine_cpu_limit|default('1')}}
    memory: {{scoring_engine_mem_limit|default('1024Mi')}}
network:
  port: {{ service_scoring_engine_port }}
  targetport: {{ service_scoring_engine_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ scoring_engine_maxsurge|default('25%') }}
  maxunavailable: {{ scoring_engine_maxunavailable|default('25%') }}




serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ scoring_engine_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ scoring_engine_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ scoring_engine_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ scoring_engine_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ scoring_engine_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

