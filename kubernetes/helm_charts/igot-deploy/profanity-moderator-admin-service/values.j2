### Default variable file for profanity_moderator_admin-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{profanity_moderator_admin_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{profanity_moderator_admin_replicacount|default(1)}}
repository: {{ image_profanity_moderator_admin_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{profanity_moderator_admin_cpu_req|default('100m')}}
    memory: {{profanity_moderator_admin_mem_req|default('100Mi')}}
  limits:
    cpu: {{profanity_moderator_admin_cpu_limit|default('1')}}
    memory: {{profanity_moderator_admin_mem_limit|default('1024Mi')}}
network:
  port: {{ service_profanity_moderator_admin_port }}
  targetport: {{ service_profanity_moderator_admin_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ profanity_moderator_admin_maxsurge|default('25%') }}
  maxunavailable: {{ profanity_moderator_admin_maxunavailable|default('25%') }}


serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ profanity_moderator_admin_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ profanity_moderator_admin_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ profanity_moderator_admin_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ profanity_moderator_admin_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ profanity_moderator_admin_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

