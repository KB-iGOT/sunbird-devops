### Default variable file for form_service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{form_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{form_replicacount|default(1)}}
repository: {{ image_form_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{form_cpu_req|default('100m')}}
    memory: {{form_mem_req|default('100Mi')}}
  limits:
    cpu: {{form_cpu_limit|default('1')}}
    memory: {{form_mem_limit|default('1024Mi')}}
network:
  port: {{ service_form_port }}
  targetport: {{ service_form_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ form_maxsurge|default('25%') }}
  maxunavailable: {{ form_maxunavailable|default('25%') }}


serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ form_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ form_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ form_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ form_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ form_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

